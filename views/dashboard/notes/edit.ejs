<%- include('../../partials/header.ejs') %>
<%- include('../../partials/dashboardHeader.ejs') %>
<form class="dashboard-form container" action="/dashboard/notes/edit/<%= note.id%>?_method=PUT" method="POST">
    <label for="title">Title</label>
    <input required id="title" type=text name="title" value="<%= note.title %>">
    <label for="description">Description</label>
    <textarea name="description" rows="100"><%= note.description %></textarea>
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" class="markdown-input"><%= note.markdown %></textarea>
    <input class="button-primary" type="submit" value="edit note">
</form>
<%- include('../../partials/dashboardFooter.ejs') %>